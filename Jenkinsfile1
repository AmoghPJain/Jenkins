pipeline{
    agent any

    stages {
        stage('Cleanup'){
            steps {
                deleteDir() // Cleans the workspace before starting the build
                echo 'Workspace cleaned up'
            }
        }
        stage('checkout') {
            steps {
                checkout(
                    changelog: false,
                    scm: [$class: 'GitSCM',
                        branches: [[name: 'main']],
                        userRemoteConfigs: [[
                            credentialsId: 'slave_ssh',
                            url: 'https://github.com/AmoghPJain/simple-java-maven-app.git' 
                           ]],
                           clean: true  // Ensures a fresh clone
                    ]
                    )
            }
        }

        stage('Build') {
            steps {
                sh '''
                    echo "Building the project..."
                    pwd
                    ls -l
                '''
            }
        }
    }
}    